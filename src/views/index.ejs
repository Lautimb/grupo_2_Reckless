<!DOCTYPE html>
<html lang="en">

<%- include('partials/head')%>

<body>

        <!-- HEADER -->
        <%- include('partials/header')%>

       
        
        <main class="main-home">
            <a class="paralax-link" href="/products">
                <div class="parallax-mirror">
                    <div class="parallax"></div>   
                </div>
            </a>
            
            <section id="new-arrivals">
                <div class="h1-center">
                    <h1>NEW ARRIVALS</h1>
                </div>

                <div class="products-container">

                    <% for(product of products){%>
                 
                        <article class="product-container">
                            <a href="/products/detail/<%= product.id %>">
                               
                                <img src="/imgs/products/<%= product.images[0].filename[0] %>" alt=""> 
                                      
                                <div class="product-detail">
                                    <div class="name-price-product-container">
                                        <h3><%= product.name%></h3> 
                                        <p>$<%= product.price %></p>
                                    </div>
                                </div>
                            </a>
                            <div>
                                <% if(product.dataValues.liked == 'added'){ %> 
                                    <span><i class="fas fa-heart like added" id="<%= product.id %>"></i></span> 
                                <% } else { %>
                                    <span><i class="fas fa-heart like" id="<%= product.id %>"></i></span>   
                                <% } %>
                            </div>
                        </article>
                    <%}%>

                </div>

                <%- include('partials/modalRequireLogin')%>


            </section>

        </main>

    <script src="/scripts/parallax.js"></script>
    <script src="/scripts/wishlist.js"></script>
    <!-- FOOTER -->

    <%- include('partials/footer')%>

    
</body>

</html>